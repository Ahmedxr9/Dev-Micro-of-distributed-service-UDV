{
  "dashboard": {
    "title": "Notification System Dashboard",
    "tags": ["notifications", "microservices"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Notifications Processed (Total)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(email_notifications_processed_total + sms_notifications_processed_total + push_notifications_processed_total)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Notifications Failed (Total)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(email_notifications_failed_total + sms_notifications_failed_total + push_notifications_failed_total)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Processing Duration by Channel",
        "type": "graph",
        "gridPos": {"h": 8, "x": 12, "y": 0, "w": 12},
        "targets": [
          {
            "expr": "rate(email_notification_processing_duration_seconds_sum[5m])",
            "legendFormat": "Email",
            "refId": "A"
          },
          {
            "expr": "rate(sms_notification_processing_duration_seconds_sum[5m])",
            "legendFormat": "SMS",
            "refId": "B"
          },
          {
            "expr": "rate(push_notification_processing_duration_seconds_sum[5m])",
            "legendFormat": "Push",
            "refId": "C"
          }
        ]
      },
      {
        "id": 4,
        "title": "Notifications by Channel",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "email_notifications_processed_total",
            "legendFormat": "Email",
            "refId": "A"
          },
          {
            "expr": "sms_notifications_processed_total",
            "legendFormat": "SMS",
            "refId": "B"
          },
          {
            "expr": "push_notifications_processed_total",
            "legendFormat": "Push",
            "refId": "C"
          }
        ]
      }
    ]
  }
}

